{
	"compilerOptions": {
		// Control
		"noEmit": true,
		"noUncheckedSideEffectImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		// Type Checking
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
	},
	
	"include": [
		"src"
	]
}
